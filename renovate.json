{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "allowedCommands": [
    "^./scripts/vendor_hash.sh --update$"
  ],
  "postUpgradeTasks": {
    "commands": ["./scripts/vendor_hash.sh --update"],
    "fileFilters": ["./nix/goVendorHash.nix"],
    "executionMode": "branch"
  }
}
