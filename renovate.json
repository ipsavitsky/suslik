{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchManagers": [
        "gomod"
      ],
      "postUpgradeTasks": {
        "commands": [
          "bash ./scripts/vendor_hash.sh --update"
        ],
        "fileFilters": [
          "**/*.nix"
        ],
        "executionMode": "update"
      }
    }
  ]
}
