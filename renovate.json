{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "allowedCommands": [
    "^./scripts/vendor_hash.sh --update$"
  ],
  "postUpgradeTasks": {
    "tasks": [
      {
        "fileFilters": [
          "go.mod",
          "go.sum"
        ],
        "commands": [
          "go mod tidy"
        ]
      },
      {
        "fileFilters": [
          "nix/goVendorHash.nix"
        ],
        "commands": [
          "./scripts/vendor_hash.sh --update"
        ]
      }
    ]
  }
}
